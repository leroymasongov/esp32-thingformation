{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "espidf",
      "name": "Launch blink debug",
      "request": "launch",
      "debugPort": 49200,
      "logLevel": 2,
      "mode": "auto",
      "verifyAppBinBeforeDebug": false,
      "tmoScaleFactor": 1,
      "initGdbCommands": [
        "target extended-remote localhost:3333",
        "mon reset halt",
        "flushregs",
        "thb app_main"
      ],
      "env": {
        "CUSTOM_ENV_VAR": "SOME_VALUE"
      }
    }
  ]
}